Vendor:       SuSE GmbH, Nuernberg, Germany
Distribution: SuSE Linux 6.4 (i386)
Name:         @RPMNAME@
Release:      1
Copyright:    (c) 2000 SuSE GmbH
Group:        System Environment/YaST
Requires:	y2t_online_update yast2
BuildArchitectures: noarch

Packager:     @MAINTAINER@

Summary:      YaST2 Modules for installation
Version:      @VERSION@
Source0:      @RPMNAME@-@VERSION@.tar.bz2

%description
-

%prep

%setup -n @RPMNAME@-@VERSION@

%build

./configure
make

%install

make install

%{?suse_check}

%files

/var/adm/fillup-templates/rc.config.y2c_online_update
/etc/suseservers
@YAST2DIR@/menuentries/menuentry_online_update.ycp
@YAST2DIR@/include/suseservers.ycp
@YAST2DIR@/scrconf/etc_suseservers.scr
@YAST2DIR@/clients/online_update.ycp
@YAST2DIR@/clients/online_update_close.ycp
@YAST2DIR@/clients/online_update_details.ycp
@YAST2DIR@/clients/online_update_load.ycp
@YAST2DIR@/clients/online_update_select.ycp
@YAST2DIR@/clients/online_update_start.ycp

%post
echo "Updating etc/rc.config..."
if [ -x bin/fillup ] ; then bin/fillup -q -d = etc/rc.config var/adm/fillup-templates/rc.config.y2c_online_update
else
       echo "ERROR: fillup not found. This should not happen. Please compare"
       echo "/etc/rc.config and /var/adm/fillup-templates/rc.config.y2c_online_update and update manually."
fi
