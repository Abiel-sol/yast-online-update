/**
 * Summary:	Wrapper for web-updater call
 * Author:	Jiri Suchomel <jsuchome@suse.cz>
 */

{

  textdomain "online-update";

  map display_info    = UI::GetDisplayInfo ();

  import "Popup";

  if (display_info["TextMode"]:false)
  {
	// popup message; 'rug' is name of command-line tool
	Popup::Message (_("To install patches for your system in text mode, use the rug command."));
	return;
  }
  SCR::Execute (.target.bash, "/usr/sbin/web-updater-starter");
  return;
}
